<body>
    <div class="col-12 col-sm-3 text-center">


        <%- include('header'); %>

            <h1 class="title">Confirm :</h1>

            <h2 class="title">La réservation est confirmée pour les billets suivants :</h2>

            <div class="blackboard">

                <table class="table">
                    <thead>


                        <th scope="col">N°</th>
                        <th scope="col">Journey</th>
                        <th scope="col">Date</th>
                        <th scope="col">Departure Time</th>
            </div>
            </tr>
            </thead>
            <tbody>

                <%for(i=0;i<ticketBasket.length;i++) {%>

                    <tr>
                        <th scope="row">
                            <%=i+1%>
                        </th>
                        <td>
                            <%=ticketBasket[i].departure%> /
                                <%=ticketBasket[i].arrival%>
                        </td>
                        <td>
                            <%=ticketBasket[i].date%>
                        </td>
                        <td>
                            <%=ticketBasket[i].departureTime%>
                        </td>

                    </tr>
                    <%}%>
    </div>
    </tbody>
    </table>


    <a href="/" class="btn btn-danger confirm">Home</a>




